<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gambar"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/namaTempat"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gambar"
                android:layout_centerHorizontal="true"
                android:text="Title"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/alamatTempat"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaTempat"
                android:layout_centerHorizontal="true"
                android:text="Alamat"
                android:textSize="16dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/htmTempat"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alamatTempat"
                android:layout_centerHorizontal="true"
                android:text="HTM"
                android:textSize="16dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/navigasi"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/htmTempat"
                android:layout_centerHorizontal="true"
                android:text="MULAI NAVIGASI" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>